<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="university-pu" transaction-type="JTA">
        <jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=universityDS)</jta-data-source>
        
        <!-- Exam Entity Classes -->
        <class>com.example.university.exam.model.Exam</class>
        <class>com.example.university.exam.model.Grade</class>
        
        <!-- Fee Entity Classes -->
        <class>com.example.university.fee.model.Payment</class>
        <class>com.example.university.fee.model.Invoice</class>
        <class>com.example.university.fee.model.InvoiceLineItem</class>
        <class>com.example.university.fee.model.FeeStructure</class>
        <class>com.example.university.fee.model.FeeItem</class>
        <class>com.example.university.fee.model.FinancialAid</class>
        <class>com.example.university.fee.model.AccountStatement</class>
        <class>com.example.university.fee.model.Refund</class>
        
        <!-- Course Entity Classes -->
        <class>com.example.university.course.model.Course</class>
        <class>com.example.university.course.model.CourseEnrollment</class>
        <class>com.example.university.course.model.CourseSchedule</class>
        <class>com.example.university.course.model.CoursePrerequisite</class>
        
        <properties>
            <!-- Database Schema Generation -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            
            <!-- Hibernate Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
